{% extends "layouts/main.html" %}

{% block pageTitle %}
  Address confirmed - GOV.UK Prototype Kit
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukPanel({
        titleText: "Address confirmed",
        html: "Your address has been successfully recorded."
      }) }}

      <h2 class="govuk-heading-m">What happens next</h2>

      <p class="govuk-body">
        We have recorded your address and will use it for correspondence.
      </p>

      <p class="govuk-body">
        <a href="/dwp-find-an-address-plugin-standalone/address-question" class="govuk-link">Start again</a>
      </p>

    </div>
  </div>

{% endblock %}
