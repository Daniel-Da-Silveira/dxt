{% extends "layouts/main.html" %}

{% block pageTitle %}
  Confirm your details - GOV.UK Prototype Kit
{% endblock %}

{% block content %}

  {{ govukBackLink({
    text: "Back",
    href: "javascript: window.history.go(-1)"
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">Confirm your details</h1>

      <dl class="govuk-summary-list">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Name
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data.name }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="/dwp-find-an-address-plugin-mini-journey/question-one">
              Change<span class="govuk-visually-hidden"> name</span>
            </a>
          </dd>
        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Address
          </dt>
          <dd class="govuk-summary-list__value">
            {% if data.finalAddress %}
              {{ data.finalAddress }}
            {% else %}
              {{ data.selectedAddress }}
            {% endif %}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="/dwp-find-an-address-plugin-mini-journey/postcode-entry?returnUrl={{ data.returnUrl or '/dwp-find-an-address-plugin-mini-journey/question-one' }}">
              Change<span class="govuk-visually-hidden"> address</span>
            </a>
          </dd>
        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Email
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data.email }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="/dwp-find-an-address-plugin-mini-journey/question-one">
              Change<span class="govuk-visually-hidden"> email</span>
            </a>
          </dd>
        </div>
      </dl>

      <form method="post">
        {{ govukButton({
          text: "Confirm and continue",
          name: "action",
          value: "confirm"
        }) }}
      </form>

    </div>
  </div>

{% endblock %}
