{% extends "layouts/main.html" %}

{% block pageTitle %}
  Working Example - DWP Find an Address Plugin
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        Working Example (No Errors)
      </h1>

      <p class="govuk-body">
        This demonstrates the plugin working correctly without any errors.
      </p>

      <h2 class="govuk-heading-m">Address Lookup Form</h2>

      <form method="post" autocomplete="off">
        <fieldset class="govuk-fieldset" role="group">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
              Find an address
            </h1>
          </legend>
          
          {{ govukInput({
            label: {
              text: "Postcode"
            },
            classes: "govuk-input--width-10",
            hint: {
              text: "For example, AA3 1AB."
            },
            id: "postcode",
            name: "postcode",
            value: "SR4 8JN"
          }) }}

          {{ govukInput({
            label: {
              text: "Building number or name"
            },
            hint: {
              text: "For example, 15 or Prospect Cottage."
            },
            id: "searchString",
            name: "searchString",
            value: "104"
          }) }}
        </fieldset>

        {{ govukButton({
          text: "Find address"
        }) }}
      </form>

      <p class="govuk-body govuk-!-margin-top-4">
        <a href="/dwp-error-demonstration/manual-address-errors" class="govuk-link">Enter address manually</a>
      </p>

      <h2 class="govuk-heading-m">Manual Address Entry Form</h2>

      <form method="post">
        {% call govukFieldset({
          legend: {
            text: "What is your address?",
            classes: "govuk-fieldset__legend--l",
            isPageHeading: true
          }
        }) %}
          {{ govukInput({
            label: {
              text: "Address line 1"
            },
            id: "address-line-1",
            name: "address-line-1",
            value: "104 Galashiels Road",
            autocomplete: "address-line1"
          }) }}

          {{ govukInput({
            label: {
              text: "Address line 2 (optional)"
            },
            id: "address-line-2",
            name: "address-line-2",
            value: "",
            autocomplete: "address-line2"
          }) }}

          {{ govukInput({
            label: {
              text: "Town or city"
            },
            classes: "govuk-!-width-two-thirds",
            id: "town-city",
            name: "town-city",
            value: "Sunderland",
            autocomplete: "address-level2"
          }) }}

          {{ govukInput({
            label: {
              text: "Postcode"
            },
            classes: "govuk-input--width-10",
            id: "postcode",
            name: "postcode",
            value: "SR4 8JN",
            autocomplete: "postal-code"
          }) }}
        {% endcall %}
        {{ govukButton({
          text: "Continue"
        }) }}
      </form>

      <p class="govuk-body govuk-!-margin-top-4">
        <a href="/dwp-error-demonstration" class="govuk-link">‚Üê Back to demonstration index</a>
      </p>

    </div>
  </div>
{% endblock %}
