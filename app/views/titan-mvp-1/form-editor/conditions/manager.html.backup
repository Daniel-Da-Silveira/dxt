{% extends "layouts/main.html" %}
{% from "components/service-header/macro.njk" import serviceHeader %}
{% from "moj/components/button-menu/macro.njk" import mojButtonMenu %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% set pageName %}Manage conditions - {{ form.name }}{% endset %}

{% block header %}
{{ serviceHeader({
organisationName: "Defra",
productName: "Forms Designer",
serviceName: "",
containerClasses: containerClasses,
accountName: "Chris Smith",
homepageLink: "/",
signOutLink: "/onboarding/sign-out-confirmation",
navigationItems: [
{ href: "/library.html", text: "Forms library", id: "nav-library" },
{ href: "/form-overview/index", text: "Overview", id: "nav-overview" },
{ href: "/form-editor/listing", text: "Editor", id: "nav-editor" }
],
activeLinkId: "nav-editor"
}) }}

<div class="x-govuk-masthead x-govuk-masthead--large">
    <div class="govuk-width-container">
        {{ govukBackLink({ classes: "govuk-back-link--inverse govuk-!-margin-bottom-0", text:
        commonTerms.form_editor.navigation.back_to_add_edit_pages, href: "/form-editor/listing.html" }) }}

        <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible"
            style="border-bottom: 1px solid white; margin-bottom: 0" />

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full-from-desktop">
                <h1 class="x-govuk-masthead__title">
                    <span class="govuk-caption-l" style="color: white;">{{ form.name }}</span>
                    Manage conditions
                </h1>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <div class="govuk-grid-column-two-thirds">

            <input type="hidden" id="form-pages-data" value="{{ formPages | dump | safe | replace('"', ' &quot;') }}" />
            <input type="hidden" id="new-condition-id" value="{{ newConditionId }}" />

            <!-- Success Notification Banner -->
            {% if conditionSaved %}
            {% set html %}
            <h3 class="govuk-notification-banner__heading">
                Condition saved
            </h3>
            <p class="govuk-body">You can now add it to pages in your form</p>
            <div class="govuk-button-group">
                <button class="govuk-button" id="add-to-pages-from-notification" data-action="show-form"
                    data-form-id="add-condition-to-pages-form">
                    Add to pages
                </button>
            </div>
            {% endset %}

            {{ govukNotificationBanner({
            html: html,
            type: "success"
            }) }}
            {% endif %}
        </div>

        <div class="govuk-grid-row">
            <!-- Left Column for Form Controls -->
            <div class="govuk-grid-column-two-thirds-from-desktop" id="container"
                style="flex: 1 1 75%; overflow-y: auto">

                <!-- Sub Navigation for Question -->
                <nav class="moj-sub-navigation govuk-!-padding-top-0 govuk-!-margin-bottom-2"
                    aria-label="Sub navigation">
                    <ul class="moj-sub-navigation__list" id="nav-list2">

                        <li class="moj-sub-navigation__item">
                            <a class="moj-sub-navigation__link" aria-current="page" href="#">
                                All conditions
                            </a>
                        </li>
                    </ul>
                </nav>



                <div class="govuk-!-margin-top-6">
                </div>

                {% if conditions | length > 0 %}

                <!-- Conditions Table -->
                <table class="govuk-table" data-module="moj-multi-select" data-id-prefix="conditions-">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th class="govuk-table__header" scope="col" id="conditions-select-all">
                                <div class="govuk-checkboxes__item govuk-checkboxes--small moj-multi-select__checkbox">
                                    <input type="checkbox" class="govuk-checkboxes__input" id="select-all-conditions">
                                    <label class="govuk-label govuk-checkboxes__label" for="select-all-conditions">
                                        <span class="govuk-visually-hidden">Select all conditions</span>
                                    </label>
                                </div>
                            </th>
                            <th class="govuk-table__header govuk-!-width-one-third" scope="col">
                                Condition</th>
                            <th class="govuk-table__header govuk-!-width-one-third" scope="col">Used
                                in</th>
                            <th class="govuk-table__header" scope="col">
                                Actions</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        {% for condition in conditions %}
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">
                                <div class="govuk-checkboxes__item govuk-checkboxes--small moj-multi-select__checkbox">
                                    <input type="checkbox" class="govuk-checkboxes__input condition-checkbox"
                                        id="condition-{{ condition.id }}" value="{{ condition.id }}"
                                        data-condition-name="{{ condition.conditionName }}">
                                    <label class="govuk-label govuk-checkboxes__label"
                                        for="condition-{{ condition.id }}">
                                        <span class="govuk-visually-hidden">Select {{
                                            condition.conditionName }}</span>
                                    </label>
                                </div>
                            </td>
                            <td class="govuk-table__cell">
                                <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-1">
                                    {{
                                    condition.conditionName }}</p>
                                <p class="govuk-body govuk-!-margin-bottom-0">
                                    {% for rule in condition.rules %}
                                    {% if not loop.first %}
                                    <span class="govuk-!-font-weight-bold"> {{ rule.logicalOperator | default('AND') }}
                                    </span>
                                    {% endif %}
                                    '{{ rule.questionText }}' {{ rule.operator | replace("-", " ") }} {% if rule.value |
                                    isArray %}'{{ rule.value | join("' or '") }}'{% else %}'{{ rule.value }}'{% endif
                                    %}{% if not loop.last %}&nbsp;{% endif %}
                                    {% endfor %}
                                </p>
                            </td>
                            <td class="govuk-table__cell">
                                {% set pagesWithCondition = [] %}
                                {% set pageCounter = 1 %}
                                {% for page in formPages %}
                                {% if page.conditions %}
                                {% for pageCondition in page.conditions %}
                                {% if pageCondition.id == condition.id %}
                                {% set pageLabel = page.pageHeading or 'Page ' + pageCounter %}
                                {% if pageLabel not in pagesWithCondition %}
                                {% set pagesWithCondition = pagesWithCondition.concat([pageLabel]) %}
                                {% endif %}
                                {% endif %}
                                {% endfor %}
                                {% endif %}
                                {% set pageCounter = pageCounter + 1 %}
                                {% endfor %}
                                {{ pagesWithCondition | join(', ') or 'Not used' }}
                            </td>
                            <td class="govuk-table__cell">
                                <ul class="govuk-summary-list__actions-list">
                                    <li class="govuk-summary-list__actions-list-item">
                                        <a href="/form-editor/conditions/edit/{{ condition.id }}"
                                            class="govuk-link govuk-link--no-visited-state">Edit<span
                                                class="govuk-visually-hidden"> {{
                                                condition.conditionName }}</span></a>
                                    </li>
                                    <li class="govuk-summary-list__actions-list-item">
                                        <a href="/form-editor/conditions/delete/{{ condition.id }}"
                                            class="govuk-link govuk-link--no-visited-state govuk-link--destructive">Delete<span
                                                class="govuk-visually-hidden"> {{
                                                condition.conditionName }}</span></a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

                {% else %}
                <p class="govuk-body">No conditions available to use. Create a new condition.</p>
                {% endif %}

                {% if conditions | length < 1 %} <hr
                    class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
                    {% endif %}


                    <!-- Add New Condition Button -->
                    <div class="moj-button-group moj-button-group--inline">

                        <button class="govuk-button" id="add-new-condition">
                            Create new condition
                        </button>

                        {{ mojButtonMenu({
                        button: {
                        text: "Manage selected conditions",
                        classes: "govuk-button--secondary"
                        },
                        items: [
                        {
                        text: "Add to pages",
                        href: "#",
                        attributes: {
                        id: "add-condition-to-pages",
                        "data-action": "show-form",
                        "data-form-id": "add-condition-to-pages-form"
                        }
                        },
                        {
                        text: "Remove from pages",
                        href: "#",
                        attributes: {
                        id: "remove-condition-from-pages",
                        "data-action": "show-form",
                        "data-form-id": "remove-condition-from-pages-form"
                        }
                        },
                        {
                        text: "Join selected conditions",
                        href: "#",
                        attributes: {
                        id: "join-conditions-button",
                        "data-action": "show-form",
                        "data-form-id": "join-conditions-form-container"
                        }
                        }
                        ]
                        }) }}
                    </div>
                    {#
            </div> #}


            <!-- Add New Condition Form (Hidden by Default) -->
            <div id="new-condition-form" style="display: none;">
                <form id="condition-form" method="post" action="/form-editor/conditions-manager/add">
                    <div class="govuk-form-group app-form-container">
                        <h2 class="govuk-heading-m app-form-container__title">Create new
                            condition</h2>

                        <div class="govuk-form-group" id="conditions-container">
                            <div class="govuk-form-group">
                                <label class="govuk-label" for="questionSelect">
                                    Select a question
                                </label>
                                <select class="govuk-select" id="questionSelect" name="question" required
                                    data-available-questions='{{ availableQuestions | dump | safe }}'>
                                    <option value="">Choose a question</option>
                                    {% for question in availableQuestions %}
                                    <option value="{{ question.value }}" data-type="{{ question.type }}"
                                        data-options='{{ question.options | dump | safe }}'>
                                        {{ question.text }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="govuk-form-group">
                                <label class="govuk-label" for="operatorSelect">
                                    Condition type
                                </label>
                                <select class="govuk-select" id="operatorSelect" name="operator" required>
                                    <option value="">Select a condition type</option>
                                    <option value="is" selected>is</option>
                                    <option value="is-not">is not</option>
                                </select>
                            </div>

                            <div class="govuk-form-group" id="valueContainer" style="display: none;">
                                <!-- Value inputs will be dynamically populated here -->
                            </div>
                        </div>

                        <div class="govuk-form-group" id="logicalOperatorGroup" style="display: none;">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                                    How do you want to combine these conditions?
                                </legend>
                                <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="logical-operator-and"
                                            name="logicalOperator" type="radio" value="AND" checked>
                                        <label class="govuk-label govuk-radios__label" for="logical-operator-and">
                                            All conditions must be met (AND)
                                        </label>
                                    </div>
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="logical-operator-or"
                                            name="logicalOperator" type="radio" value="OR">
                                        <label class="govuk-label govuk-radios__label" for="logical-operator-or">
                                            Any condition can be met (OR)
                                        </label>
                                    </div>
                                </div>
                            </fieldset>
                        </div>



                        <div id="additional-conditions">
                            <!-- Additional conditions will be added here -->
                        </div>



                        <div class="govuk-button-group">
                            <button class="govuk-button govuk-button--inverse" id="add-condition-link">
                                <svg class="govuk-!-margin-right-1" style="position: relative; top: 2px" width="12"
                                    height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6 1V11" stroke="currentColor" stroke-width="2" />
                                    <path d="M1 6H11" stroke="currentColor" stroke-width="2" />
                                </svg>
                                Add another condition
                            </button>
                        </div>



                        <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

                        <div class="govuk-form-group">
                            <label class="govuk-label govuk-label--m" for="conditionName">
                                Condition name
                            </label>
                            <div class="govuk-hint">
                                Condition names help you to identify conditions in your
                                form,
                                for example, 'Not a farmer'. Users will not see condition
                                names.
                            </div>
                            <input class="govuk-input" id="conditionName" name="conditionName" type="text" required>
                        </div>

                        <div class="govuk-button-group">
                            <button type="submit" class="govuk-button">Save
                                condition</button>
                            <a href="#" class="govuk-link govuk-link--no-visited-state" id="cancel-condition">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Add Condition to Pages Form (Hidden by Default) -->
            <div id="add-condition-to-pages-form" class="govuk-!-margin-top-6 app-form-container"
                style="display: none;">
                <form id="apply-condition-form" method="post" action="/form-editor/conditions/apply">
                    <div class="govuk-form-group">
                        <h2 class="govuk-heading-m app-form-container__title">Add condition to pages</h2>

                        <div class="govuk-form-group">
                            <h3 class="govuk-heading-s">Selected conditions</h3>
                            <ul class="govuk-list govuk-list--bullet" id="selected-conditions-list">
                                <!-- Selected conditions will be added here dynamically -->
                            </ul>
                        </div>

                        <div class="govuk-form-group">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                                    Select pages to apply the condition to
                                </legend>
                                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                                    {% for page in formPages %}
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" id="page-{{ page.pageId }}" name="pages"
                                            type="checkbox" value="{{ page.pageId }}">
                                        <label class="govuk-label govuk-checkboxes__label" for="page-{{ page.pageId }}">
                                            {{ page.pageHeading or 'Page ' + loop.index }}
                                        </label>
                                    </div>
                                    {% endfor %}
                                </div>
                            </fieldset>
                        </div>

                        <div class="govuk-button-group">
                            <button type="submit" class="govuk-button">Apply condition</button>
                            <a href="#" class="govuk-link govuk-link--no-visited-state"
                                id="cancel-add-condition-to-pages">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Join Conditions Form (Hidden by Default) -->
            <div id="join-conditions-form-container" class="govuk-!-margin-top-6 app-form-container"
                style="display: none;">
                <form id="join-conditions-form" method="post" action="/form-editor/conditions-manager/join">
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                                How do you want to combine these conditions?
                            </legend>
                            <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="join-operator-and" name="operator"
                                        type="radio" value="AND" checked>
                                    <label class="govuk-label govuk-radios__label" for="join-operator-and">
                                        All conditions must be met (AND)
                                    </label>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="join-operator-or" name="operator"
                                        type="radio" value="OR">
                                    <label class="govuk-label govuk-radios__label" for="join-operator-or">
                                        Any condition can be met (OR)
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-label--m" for="joined-condition-name">
                            Name for joined condition
                        </label>
                        <div class="govuk-hint">
                            Condition names help you to identify conditions in your
                            form,
                            for example, 'Not a farmer'. Users will not see condition
                            names.
                        </div>
                        <input class="govuk-input" id="joined-condition-name" name="joined-condition-name" type="text"
                            required>
                    </div>
                    <div class="govuk-button-group">
                        <button type="submit" class="govuk-button">Save joined
                            condition</button>

                        <a href="#" class="govuk-link govuk-link--no-visited-state" id="cancel-join">Cancel</a>
                    </div>
                </form>
            </div>

            <!-- Remove Condition from Pages Form (Hidden by Default) -->
            <div id="remove-condition-from-pages-form" class="govuk-!-margin-top-6 app-form-container"
                style="display: none;">
                <form id="remove-condition-form" method="post" action="/form-editor/conditions/remove">
                    <div class="govuk-form-group">
                        <h2 class="govuk-heading-m app-form-container__title">Remove conditions from pages</h2>

                        <div class="govuk-form-group">
                            <h3 class="govuk-heading-s">Selected conditions</h3>
                            <ul class="govuk-list govuk-list--bullet" id="selected-conditions-to-remove-list">
                                <!-- Selected conditions will be added here dynamically -->
                            </ul>
                        </div>

                        <div class="govuk-form-group">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                                    Select pages to remove conditions from
                                </legend>
                                <div class="govuk-checkboxes" data-module="govuk-checkboxes" id="pages-with-conditions">
                                    <!-- Pages with conditions will be added here dynamically -->
                                </div>
                            </fieldset>
                        </div>

                        <div class="govuk-button-group">
                            <button type="submit" class="govuk-button govuk-button--warning">Remove conditions</button>
                            <a href="#" class="govuk-link govuk-link--no-visited-state"
                                id="cancel-remove-condition">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
            </dd>
        </div>
        </dl>
    </div>
</div>
</div>
</div>
</div>
</div>

