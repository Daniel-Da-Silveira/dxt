        }

        // Handle remove condition from pages
        const removeConditionFromPagesButton = document.getElementById('remove-condition-from-pages');
        const removeConditionFromPagesForm = document.getElementById('remove-condition-from-pages-form');
        const cancelRemoveCondition = document.getElementById('cancel-remove-condition');
        const removeConditionForm = document.getElementById('remove-condition-form');
        const selectedConditionsToRemoveList = document.getElementById('selected-conditions-to-remove-list');

        function updateSelectedConditionsToRemoveList() {
            const selectedCheckboxes = document.querySelectorAll('.condition-checkbox:checked');
            selectedConditionsToRemoveList.innerHTML = '';
            const selectedConditionIds = Array.from(selectedCheckboxes).map(checkbox => checkbox.value);
            const pagesWithConditions = document.getElementById('pages-with-conditions');
            pagesWithConditions.innerHTML = '';

            // Get form pages data
            const formPagesDataElement = document.getElementById('form-pages-data');
            let formPagesData = [];
            try {
                const rawValue = formPagesDataElement.value;
                const decodedValue = rawValue
                    .replace(/&quot;/g, '"')
                    .replace(/&amp;/g, '&')
                    .replace(/&lt;/g, '<')
                    .replace(/&gt;/g, '>');

                formPagesData = JSON.parse(decodedValue);

                // Debug logging
                console.log('Raw form pages data:', formPagesData);
                console.log('Selected condition IDs:', selectedConditionIds);
            } catch (e) {
                console.error('Error parsing form pages data:', e);
                return;
            }

            // Create a map of pages with conditions
            const pagesWithSelectedConditions = new Map();

            selectedCheckboxes.forEach(checkbox => {
                const conditionName = checkbox.dataset.conditionName;
                const conditionId = checkbox.value;

                console.log('Processing condition:', {
                    name: conditionName,
                    id: conditionId
                });

                if (conditionName) {
                    const li = document.createElement('li');
                    li.textContent = conditionName;
                    selectedConditionsToRemoveList.appendChild(li);

                    // Find pages that have this condition
                    formPagesData.forEach((page, index) => {
                        console.log('Checking page:', {
                            pageId: page['pageId '],
                            conditions: page['conditions ']
                        });

                        if (page['conditions '] && Array.isArray(page['conditions '])) {
                            const hasCondition = page['conditions '].some(condition => {
                                const match = String(condition['id ']) === String(conditionId);
                                console.log('Condition match:', {
                                    pageConditionId: condition['id '],
                                    selectedConditionId: conditionId,
                                    match: match
                                });
                                return match;
                            });

                            if (hasCondition) {
                                const pageId = page['pageId '];
                                if (!pagesWithSelectedConditions.has(pageId)) {
                                    // Get the page heading, ensuring we handle the space in the property name
                                    const pageHeading = page['pageHeading '] || `Page ${index + 1}`;
                                    pagesWithSelectedConditions.set(pageId, {
                                        pageId: pageId,
                                        pageHeading: pageHeading.trim() || `Page ${index + 1}`,
                                        pageIndex: index + 1,
                                        conditions: []
                                    });
                                }
                                pagesWithSelectedConditions.get(pageId).conditions.push(conditionName);
                            }
                        }
                    });
                }
            });

            console.log('Final pages with conditions:', Array.from(pagesWithSelectedConditions.entries()));

            // Add pages with conditions to the form
            if (pagesWithSelectedConditions.size > 0) {
                const checkboxesContainer = document.createElement('div');
                checkboxesContainer.className = 'govuk-checkboxes';
                checkboxesContainer.setAttribute('data-module', 'govuk-checkboxes');

                // Sort pages by their index before creating checkboxes
                const sortedPages = Array.from(pagesWithSelectedConditions.entries())
                    .sort((a, b) => a[1].pageIndex - b[1].pageIndex);

                sortedPages.forEach(([pageId, pageData]) => {
                    console.log('Creating checkbox for page:', {
                        pageId: pageId,
                        pageHeading: pageData.pageHeading,
                        pageIndex: pageData.pageIndex
                    });

                    const itemDiv = document.createElement('div');
                    itemDiv.className = 'govuk-checkboxes__item';

                    const input = document.createElement('input');
                    input.className = 'govuk-checkboxes__input';
                    input.id = `remove-page-${pageId}`;
                    input.name = 'pages';
                    input.type = 'checkbox';
                    input.value = pageId;
                    input.setAttribute('aria-describedby', `remove-page-${pageId}-hint`);

                    const label = document.createElement('label');
                    label.className = 'govuk-label govuk-checkboxes__label';
                    label.htmlFor = `remove-page-${pageId}`;
                    label.textContent = pageData.pageHeading && pageData.pageHeading.trim() ? pageData.pageHeading : `Page ${pageData.pageIndex}`;

                    const hint = document.createElement('div');
                    hint.id = `remove-page-${pageId}-hint`;
                    hint.className = 'govuk-hint govuk-checkboxes__hint';
                    if (pageData.conditions.length === 1) {
                        hint.textContent = `Has condition: ${pageData.conditions[0]}`;
                    } else {
                        hint.textContent = `Has ${pageData.conditions.length} selected conditions`;
                    }

                    itemDiv.appendChild(input);
                    itemDiv.appendChild(label);
                    itemDiv.appendChild(hint);
                    checkboxesContainer.appendChild(itemDiv);
                });

                pagesWithConditions.innerHTML = '';
                pagesWithConditions.appendChild(checkboxesContainer);

                // Initialize GOV.UK checkboxes only if we have checkboxes
                if (checkboxesContainer.querySelectorAll('input[type="checkbox"]').length > 0) {
                    if (window.GOVUKFrontend && window.GOVUKFrontend.Checkboxes) {
                        try {
                            const checkboxes = new window.GOVUKFrontend.Checkboxes(checkboxesContainer);
                            if (checkboxes && typeof checkboxes.init === 'function') {
                                checkboxes.init();
                            }
                        } catch (e) {
                            console.error('Error initializing checkboxes:', e);
                        }
                    }
                }
            } else {
                const noPagesMessage = document.createElement('p');
                noPagesMessage.className = 'govuk-body';
                noPagesMessage.textContent = 'None of the selected conditions are applied to any pages.';
                pagesWithConditions.appendChild(noPagesMessage);
            }
        }

        if (removeConditionFromPagesButton && removeConditionFromPagesForm) {
            removeConditionFromPagesButton.addEventListener('click', function (e) {
                e.preventDefault();
                removeConditionFromPagesForm.style.display = 'block';
                if (addNewButton) {
                    addNewButton.style.display = 'none';
                }
                if (joinButton) {
                    joinButton.style.display = 'none';
                }
                if (addConditionToPagesButton) {
                    addConditionToPagesButton.style.display = 'none';
                }
                updateSelectedConditionsToRemoveList();
            });
        }

        if (cancelRemoveCondition && removeConditionFromPagesForm) {
            cancelRemoveCondition.addEventListener('click', function (e) {
                e.preventDefault();
                removeConditionFromPagesForm.style.display = 'none';
                removeConditionFromPagesButton.style.display = 'inline-flex';
                if (addNewButton) {
                    addNewButton.style.display = 'block';
                }
                if (joinButton) {
                    joinButton.style.display = 'inline-flex';
                }
                if (addConditionToPagesButton) {
                    addConditionToPagesButton.style.display = 'inline-flex';
                }
                // Clear all selections
                conditionCheckboxes.forEach(checkbox => checkbox.checked = false);
                selectAllCheckbox.checked = false;
                selectedConditionsToRemoveList.innerHTML = '';
            });
        }

        if (removeConditionForm) {
            removeConditionForm.addEventListener('submit', function (e) {
                const selectedCheckboxes = document.querySelectorAll('.condition-checkbox:checked');
                const selectedPages = Array.from(document.querySelectorAll('#pages-with-conditions input[type="checkbox"]:checked'))
                    .map(checkbox => checkbox.value);

                if (selectedCheckboxes.length === 0) {
                    e.preventDefault();
                    alert('Please select at least one condition to remove');
                    return;
                }

                if (selectedPages.length === 0) {
                    e.preventDefault();
                    alert('Please select at least one page to remove conditions from');
                    return;
                }

                // Add selected condition IDs to form
                const conditionIds = Array.from(selectedCheckboxes).map(checkbox => checkbox.value);
                const conditionIdsInput = document.createElement('input');
                conditionIdsInput.type = 'hidden';
                conditionIdsInput.name = 'conditionIds';
                conditionIdsInput.value = JSON.stringify(conditionIds);
                removeConditionForm.appendChild(conditionIdsInput);

                // Add selected pages to form
                const pagesInput = document.createElement('input');
                pagesInput.type = 'hidden';
                pagesInput.name = 'pages';
                pagesInput.value = JSON.stringify(selectedPages);
                removeConditionForm.appendChild(pagesInput);
            });
        }

        // Handle the "Add to pages" button in the notification
        const addToPagesFromNotification = document.getElementById('add-to-pages-from-notification');
        if (addToPagesFromNotification) {
            addToPagesFromNotification.addEventListener('click', function (e) {
                e.preventDefault();
                const formId = this.getAttribute('data-form-id');
                const form = document.getElementById(formId);
                if (form) {
                    // Get the new condition ID from the URL parameters
                    const urlParams = new URLSearchParams(window.location.search);
                    const newConditionId = urlParams.get('newConditionId');
                    console.log('New condition ID from URL:', newConditionId); // Debug log

                    // Uncheck all condition checkboxes first
                    document.querySelectorAll('.condition-checkbox').forEach(checkbox => {
                        checkbox.checked = false;
                    });

                    // Check the checkbox for the new condition
                    const newConditionCheckbox = document.querySelector(`.condition-checkbox[value="${newConditionId}"]`);
                    console.log('Found checkbox:', newConditionCheckbox); // Debug log
                    if (newConditionCheckbox) {
                        newConditionCheckbox.checked = true;
                        console.log('Checkbox checked'); // Debug log
                    }

                    // Update the select all checkbox state
                    const selectAllCheckbox = document.getElementById('select-all-conditions');
                    if (selectAllCheckbox) {
                        const allCheckboxes = document.querySelectorAll('.condition-checkbox');
                        const allChecked = Array.from(allCheckboxes).every(checkbox => checkbox.checked);
                        selectAllCheckbox.checked = allChecked;
                    }

                    // Hide all forms and show all buttons first
                    resetFormsAndButtons();

                    // Then show the requested form and hide the buttons
                    form.style.display = "block";
                    if (addNewButton) addNewButton.style.display = "none";
                    if (joinButton) joinButton.style.display = "none";

                    // Update the selected conditions list
                    updateSelectedConditionsList();

                    // Focus on the form using GOV.UK focus style
                    setTimeout(() => {
                        form.scrollIntoView({ behavior: 'smooth', block: 'start' });
                        // Add GOV.UK focus class
                        form.classList.add('govuk-focus');
                        // Remove the focus class after a delay
                        setTimeout(() => {
                            form.classList.remove('govuk-focus');
                        }, 2000);
                    }, 100);
                }
            });
        }

        // Ensure buttons are visible on page load
        document.addEventListener('DOMContentLoaded', function () {
            resetFormsAndButtons();
        });

        // Handle window resize to ensure buttons stay visible
        window.addEventListener('resize', function () {
            resetFormsAndButtons();
        });
    });
</script>
{% endblock %}